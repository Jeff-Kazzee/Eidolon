{
  "name": "@eidolon/desktop",
  "version": "0.1.0",
  "private": true,
  "description": "Eidolon Desktop Application",
  "author": "Jeff Kazzee",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b tsconfig.electron.json && vite build",
    "build:package": "bun run build && electron-builder",
    "lint": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "test": "echo 'Desktop: No tests yet' && exit 0",
    "clean": "rimraf dist dist-electron out release",
    "preview": "vite preview",
    "postinstall": "npx @electron/rebuild -f -w better-sqlite3",
    "rebuild": "npx @electron/rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "@eidolon/shared": "workspace:*",
    "better-sqlite3": "^11.10.0",
    "electron-squirrel-startup": "^1.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "33.2.1",
    "electron-builder": "^25.1.8",
    "@electron/rebuild": "^3.7.1",
    "rimraf": "^5.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.6",
    "vite-plugin-electron": "^0.28.8"
  }
}
