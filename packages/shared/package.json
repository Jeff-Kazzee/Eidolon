{
  "name": "@eidolon/shared",
  "version": "0.1.0",
  "private": true,
  "description": "Shared utilities, types, and design tokens for Eidolon",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./design-tokens": {
      "types": "./dist/design-tokens.d.ts",
      "import": "./dist/design-tokens.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "lint": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "test": "echo 'No tests yet' && exit 0",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "rimraf": "^5.0.0",
    "typescript": "^5.7.0"
  }
}
